{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Tag Rules Schema",
  "type": "object",
  "required": ["version", "rules"],
  "properties": {
    "version": {"type": "integer", "minimum": 1},
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "match", "emit_tags"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "match": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {"type": "string", "enum": ["any_of", "regex"]},
              "keywords": {
                "type": "array",
                "items": {"type": "string"}
              },
              "pattern": {"type": "string"}
            },
            "additionalProperties": true
          },
          "emit_tags": {
            "type": "array",
            "items": {"type": "string", "minLength": 1}
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
